@model IEnumerable<NORISarchitect.UI.Projects.ProjectDto>


@{
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-start">Projects</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Projects" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Create New Project
            </a>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Client</th>
                <th>Description</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.Client</td>
                    <td>@project.Description</td>
                    <td>
                        <a class="btn btn-light"
                            asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id">
                            <i class="bi bi-view-list"></i>Details
                        </a>
                        <a class="btn btn-light"
                           asp-controller="Projects" asp-action="Update" asp-route-id="@project.Id">
                            <i class="bi bi-pencil-square"></i>Update
                        </a>
                        <button type="submit" class="btn btn-light"
                            asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id">
                            Delete
                        </button>
                        
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
